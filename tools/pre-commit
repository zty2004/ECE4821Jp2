#!/bin/bash

STAGED_FILES=$(git diff --cached --name-only --diff-filter=ACM)
[ -z "$STAGED_FILES" ] && exit 0
FAILED=0

# auto clang-format and re-stage
tools/cpp-format || FAILED=1
git add $STAGED_FILES

# non-ASCII characters
for FILE in $STAGED_FILES; do
  [ -f "$FILE" ] && LC_ALL=C grep -q '[^[:print:][:space:]]' "$FILE" 2>/dev/null && {
    echo "Error: non-ASCII found in $FILE"
    FAILED=1
  }
done

# total changed lines limit (75 lines)
TOTAL_LINES=$(($(git diff --cached | grep -c '^+' || echo 0) - $(echo "$STAGED_FILES" | wc -l)))
if [ $TOTAL_LINES -gt 75 ]; then
  echo "Error: commit has $TOTAL_LINES changed lines (max 75)"
  FAILED=1
fi

[ $FAILED -eq 1 ] && exit 1
exit 0
